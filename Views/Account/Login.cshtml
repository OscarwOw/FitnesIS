
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <script>
        if (sessionStorage.getItem('ID') != null) {
            sessionStorage.removeItem("clicked");
            window.location.href = "/home";
        }
    </script>
    

    @{
        ViewData["Title"] = "Login";
    }
    <title>Login</title>
    <style>
        body {
            background: #666
        }
    </style>
</head>

<body style="background: #666">
    

    <div class="container-fluid" bg-dark text-white>
        <div class="row">

            <div class="col-lg-4"></div>
            <div class="col-lg-4  mt-10 ">

                <h1>User Login</h1>
                <form method="post" action="@Url.Action("/login", "AccountController")" name="login" data="mydata" id="loginform">



                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Username ">Username: </label>
                        <input asp-for="Username" class="form-control" type="text" name="name" id="Username" onkeyup="manage()"/>


                    </div>
                    <div class="form-group">
                        <label asp-for="Password ">Password: </label>
                        <input asp-for="Password" class="form-control" type="password" name="password" id="Password" onkeyup="manage()" />


                    </div>





                    <button type="submit" class="btn btn-primary" value="Login" id="LoginButton" disabled>Login</button>
                </form>

                @if (ViewBag.Message != null)
                {
                    <script type="text/javascript">


                        window.onload = function () {
                                    alert("@ViewBag.Message");
                                    if (@ViewBag.Success == 1) {
                                        sessionStorage.setItem('ID', "@ViewBag.id");
                                        sessionStorage.setItem('Name', "@ViewBag.name");
                                        window.location.href = "/home";
                                    }



                                };
                    </script>
                

                }

            </div>

        </div>


    </div>

    <script>
        function manage() {
            var bt = document.getElementById('LoginButton');
            var UserName = document.getElementById('Username');
            var Password = document.getElementById('Password'); 
            if (UserName.value == '' || Password.value == '') {
                bt.disabled = true;
            }
            else {
                bt.disabled = false;
            }
        }
    </script>
</body>



</html>